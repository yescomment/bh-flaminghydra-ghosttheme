{{!< default}}

<main class="site-main">

    {{#post}}
        {{> "content" no_image=true}}
    {{/post}}

    {{#is "post"}}
        {{#if @custom.show_related_posts}}
            {{> "related-posts"}}
        {{/if}}

        {{#has tag="issue"}}
            {{#post}}
                {{> "comments"}}
            {{/post}}
        {{/has}}
    {{/is}}

</main>