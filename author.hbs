{{!< default}}

<main class="site-main">

    {{#author}}
    <section class="author gh-canvas">

        <h1 class="author-name">{{name}}</h1>

        {{#if location}}
            <span class="author-meta">{{location}}</span>
        {{/if}}

        <div class="share author-social">
            {{#if facebook}}
                <a class="share-link share-link-facebook author-social-item" href="https://www.facebook.com/{{facebook}}" target="_blank" rel="noopener noreferrer">
                    {{> "icons/facebook"}}
                    Facebook
                </a>
            {{/if}}
            {{#if twitter}}
                <a class="share-link share-link-twitter author-social-item" href="https://twitter.com/{{twitter}}" target="_blank" rel="noopener noreferrer">
                    {{> "icons/twitter"}}
                    Twitter
                </a>
            {{/if}}
        </div>

    </section>
    {{/author}}

    <div class="post-feed gh-feed gh-canvas">
        {{#foreach posts}}
            {{> "loop"}}
        {{/foreach}}
    </div>

    {{#author}}
        {{#if website}}
            <div class="author-bio">
                <a href="{{website}}" target="_blank" rel="noopener noreferrer">{{bio}}</a>
            </div>
        {{else}}
            <div class="author-bio">{{bio}}</div>
        {{/if}}
    {{/author}}

    {{pagination}}

    {{> author-index}}

</main>